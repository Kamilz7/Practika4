<Window x:Class="Practica4Zadanie1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Practica4Zadanie1"
        mc:Ignorable="d"
         Title="Задание 1" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Введите месяц (1-12):" Margin="10,65,0,-61" Grid.Row="1" RenderTransformOrigin="0.518,0.762" />
        <TextBox x:Name="MonthTextBox" Margin="0,70,53,-61" Grid.Row="1" HorizontalAlignment="Right" Width="78" RenderTransformOrigin="0.398,1.351" >
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.061"/>
                    <TranslateTransform X="0.015" Y="0.007"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="CalculateButton" Content="Вычислить" Margin="0,109,123,-99" Grid.Row="1" HorizontalAlignment="Right" Click="CalculateButton_Click" />
    </Grid>
</Window>